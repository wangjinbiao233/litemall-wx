.serviceFlag {
  position: absolute;
  z-index: 8888;
  background-color: gray;
  color: white;
  right: 5rpx;
  padding: 6rpx;
  font-size: 20rpx;
}

.container {
  background: #f9f9f9;
}

.cate-nav {
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 1000;
}

.cate-nav-body {
  height: 84rpx;
  white-space: nowrap;
  background: #fff;
  border-top: 1px solid rgba(0, 0, 0, 0.15);
  overflow: hidden;
}

.cate-nav-box {
  display: -webkit-flex;
  flex-direction: row;
  justify-content: center;
}

.cate-nav .item {
  flex: auto;
  display: inline-block;
  height: 84rpx;
  min-width: 130rpx;
  padding: 0 15rpx;
}

.cate-nav .item .name {
  display: block;
  height: 84rpx;
  padding: 0 20rpx;
  line-height: 84rpx;
  color: #333;
  font-size: 24rpx;
  width: auto;
  text-align: center;
}

.cate-nav .item.active .name {
  color: #ab2b2b;
  border-bottom: 2px solid #ab2b2b;
}

.cate-item {
  margin-top: 4rpx;
  height: auto;
  overflow: hidden;
}

.cate-item .h {
  height: 145rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cate-item .h .name {
  display: block;
  height: 35rpx;
  margin-bottom: 18rpx;
  font-size: 30rpx;
  color: #333;
}

.cate-item .h .desc {
  display: block;
  height: 24rpx;
  font-size: 24rpx;
  color: #999;
}

.cate-item .b {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
}

.cate-item .b .item {
  flex: 0 0 366rpx;
  background: #fff;
  margin-bottom: 6.25rpx;
  padding-bottom: 13.333rpx;
  height: auto;
  overflow: hidden;
  position: relative;
}

.cate-item .b .item-b {
  margin-left: 15rpx;
}

.cate-item .item .img {
  width: 366rpx;
  height: 412rpx;
}

.cate-item .item .name {
  flex-direction: row;
  display: flex;
  align-items: center;
  width: 365.625rpx;
  margin: 11.5rpx 0 0 0;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.cate-item .item .price {
  flex-direction: row;
  display: flex;
  align-items: center;
  width: 365.625rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
  color: #6bb5dc;
}

.ellipsis {
  height: 80rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-align: left;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333;
}
/* reservation.wxss */

.reservation-list {
  flex-direction: column;
  display: flex;
  padding: 30rpx 50rpx 30rpx 50rpx;
  background-color: #fff;
}

.parent-item {
  flex-direction: column;
  display: flex;
  position: relative;
}

.parent-item .parent-l {
  width: 1rpx;
  height: 100%;
  background-color: #bcbcbc;
  left: 30rpx;
  position: absolute;
}

.parent-item .title {
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.parent-item .title .left {
  flex-direction: row;
  display: flex;
  align-items: center;
}

.parent-item .title .img {
  width: 40rpx;
  height: 40rpx;
}

.parent-tag {
  width: 60rpx;
  height: 60rpx;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #7ccbed;
  color: #fff;
  padding: 15rpx;
  font-size: 35rpx;
  z-index: 666;
}

.parent-content {
  font-size: 30rpx;
  color: #000;
  margin-left: 15rpx;
}

.child-list {
  flex-direction: column;
  display: flex;
  margin-left: 120rpx;
  margin-right: 20rpx;
}

.child-item {
  height: 100rpx;
  flex-direction: row;
  display: flex;
  align-items: center;
  position: relative;
}

.child-item .top{
  flex-direction: row;
  display: flex;
  align-items: center;
}

.child-item .top .time{
  flex-direction: column;
  display: flex;
  width: 125rpx;
}

.child-item .top .child-tag {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #bcbcbc;
  color: #fff;
  z-index: 666;
}

.child-item .top .content {
  color: #bcbcbc;
  font-size: 24rpx;
}

.child-item .top .content-o {
  width: 280rpx;
  color: #bcbcbc;
  font-size: 24rpx;
}

.child-item .child-l {
  width: 1rpx;
  height: 120rpx;
  background-color: #bcbcbc;
  left: 170rpx;
  top: 30rpx;
  position: absolute;
}

.no-order .c text{
    margin: 0 auto;
    display: block;
    width: 258rpx;
    height: 29rpx;
    line-height: 29rpx;
    text-align: center;
    font-size: 29rpx;
    color: #999;
}

.goods-sort{
  width: 60rpx;
}

/*  重写 checkbox 样式  */
checkbox .wx-checkbox-input{
   border-radius: 50%;
   width: 50rpx;
   height: 50rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border: none;
   background: #8ac2d6;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;
   width: 50rpx;
   height: 50rpx;
   line-height: 50rpx;
   text-align: center;
   font-size:30rpx;
   color:#fff;
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}

.scroll-view{	
	top: 0;
	left: 0;
	background: #fff;
	border-bottom: 1rpx solid #e5e5e5;
	overflow: auto;
	text-overflow: ellipsis;
	white-space: nowrap; 
	display: flex;
	height: 100rpx;
}